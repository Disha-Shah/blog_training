<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

  <% if user_signed_in? %>
    <h3><%= current_user.name.titleize %>'s Dashboard</h3>
  <% end %>

  <%= yield %>

  </body>

  <footer>
    <% if user_signed_in? %>
      <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
    <% end %>
  </footer>
</html>
